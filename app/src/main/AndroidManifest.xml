<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mayank.myplaygame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PlayGameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dashboard.DashboardActivity" />
        <activity android:name=".wallet.WalletActivity" />
        <activity android:name=".play.PlayActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".singleplay.SinglePlayActivity" />
        <activity android:name=".quickplay.QuickPlayActivity" />
        <activity android:name=".multiplay.MultiPlayerActivity"></activity>
    </application>

</manifest>