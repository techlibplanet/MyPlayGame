<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorWhite">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

            <ImageView
                android:id="@+id/result_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:src="@color/newColorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="10sp"
                    android:background="@drawable/text_view_ques_background"
                    android:id="@+id/right_answer_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Right Answer - 6"
                    android:layout_weight="1"/>

                <TextView
                    android:textSize="10sp"
                    android:background="@drawable/text_view_ques_background"
                    android:id="@+id/wrong_answer_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wrong Answer - 4" />

                <TextView
                    android:textSize="10sp"
                    android:layout_weight="1"
                    android:id="@+id/drop_question_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_view_ques_background"
                    android:text="Drop Questions - 6" />

            </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>





</LinearLayout>